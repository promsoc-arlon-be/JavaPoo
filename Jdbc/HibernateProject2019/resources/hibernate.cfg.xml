<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- SQL Dialect -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

		<!-- Database Connection Settings -->
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<!-- property name="hibernate.connection.url">jdbc:mysql://192.168.122.240:3306/phoneDb</property -->
		<property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/phoneDb</property>
		<property name="hibernate.connection.username">phoneDb</property>
		<property name="hibernate.connection.password">phoneDb-123-Aa&amp;</property>
		<property name="show_sql">true</property>

		<!-- Specifying Session Context -->
		<property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>

		<!-- Mapping With Model Class Containing Annotations -->
		<mapping class="be.promsoc.arlon.hibernate.maven.User" />
		<mapping class="be.promsoc.arlon.hibernate.maven.Product" />
		<mapping class="be.promsoc.arlon.hibernate.maven.Pack" />
	</session-factory>
</hibernate-configuration>
